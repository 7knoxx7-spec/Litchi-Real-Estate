// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // ADMIN, AGENT, USER
  phone     String?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  properties Property[]
  bookings   Booking[]
  reviews    Review[]
  notifications Notification[]
  payments      Payment[]
  favorites     Favorite[]
  sentMessages  Message[]
  conversations Conversation[] @relation("UserConversations")
}

model Property {
  id          String   @id @default(uuid())
  title       String
  titleEn     String?
  description String
  descriptionEn String?
  price       Float
  priceType   String   @default("yearly") // yearly, monthly, weekly, daily
  type        String   // apartment, villa, etc.
  bedrooms    Int
  bathrooms   Int
  area        Float
  location    String   // JSON string for {emirate, area, address, latitude, longitude}
  images      String   // JSON string array
  features    String?  // JSON string array
  isFeatured  Boolean  @default(false)
  status      String   @default("available") // available, rented, sold
  
  agentId     String
  agent       User     @relation(fields: [agentId], references: [id])
  
  reviews     Review[]
  payments    Payment[]
  favorites   Favorite[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  views       Int      @default(0)
  
  bookings    Booking[]
}

model Booking {
  id        String   @id @default(uuid())
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  startDate  DateTime
  endDate    DateTime?
  status     String   @default("pending") // pending, confirmed, rejected, cancelled
  totalPrice Float?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Review {
  id         String   @id @default(uuid())
  rating     Int
  comment    String
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  createdAt  DateTime @default(now())
}

model Notification {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  title     String
  message   String
  type      String   // info, alert, success
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model Payment {
  id        String   @id @default(uuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  amount    Float
  currency  String   @default("AED")
  status    String   // pending, completed, failed
  method    String   // stripe, paypal
  reference String?  // transaction id
  propertyId String?
  property  Property? @relation(fields: [propertyId], references: [id])
  createdAt DateTime @default(now())
}

model Conversation {
  id        String    @id @default(uuid())
  participants User[] @relation("UserConversations")
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Message {
  id             String       @id @default(uuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  senderId       String
  sender         User         @relation(fields: [senderId], references: [id])
  content        String
  createdAt      DateTime     @default(now())
}

model Analytics {
  id         String   @id @default(uuid())
  event      String   // view, search, share, click
  details    String?  // JSON
  userId     String?
  propertyId String?
  createdAt  DateTime @default(now())
}

model Favorite {
  userId     String
  user       User     @relation(fields: [userId], references: [id])
  propertyId String
  property   Property @relation(fields: [propertyId], references: [id])
  assignedAt DateTime @default(now())

  @@id([userId, propertyId])
}
